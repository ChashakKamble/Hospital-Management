<%- include("./doctorNav.ejs") %>
<main>
    <%- include("./doctorSidebar.ejs") %>
<section class="form-win">
   <div id="viewDoc" >
            <h2>Medicines</h2>
            <input type="text" id="search" placeholder="Search by name " onkeyup="searchRece(this)">
            <table>
                <thead>
                    <tr>
                        <th>Sr.No</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% medicine.forEach(function(med,index) { %>
                    <tr>
                        <td><%= index+1%></td>
                        <td><%= med.name %></td> 
                        <td><%= med.price %></td> 
                        <td>
                            <a class="update" href='/doctor/updateMedicin/<%= med.id %>'>Update</a>
                        </td>
                        <td>
                            <a class="delete" href='/doctor/deleteMedicin/<%= med.id %>' >Delete</a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>

        </div>


</section>

</main>
<%- include("doctorFooter") %>