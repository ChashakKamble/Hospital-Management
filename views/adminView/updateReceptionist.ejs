<%- include("./adminNav.ejs") %>
<main>
    <%- include("./adminSideBar.ejs") %>
<section class="form-win">
      <div id="addDoc">
            <form action="/admin/updateReceptionist" method="POST">
                <input type="hidden" name="id" value="<%= receptionist.reception_id %>">
                <label for="name">Name:</label>
                <input type="text"  name="name" value="<%= receptionist.reception_name%>"  required>
                <label for="email">Email:</label>
                <input type="text"  name="email" value="<%=receptionist.Reception_email %>" required>
                <label for="contact">Contact:</label>
                <input type="text"  name="contact" value="<%=receptionist.reception_contact %>" required>
                <label for="role">Role:</label>
                <input type="text"  name="role" value="Receptionist" required>
                <label for="status">Status:</label>
                <input type="text"  name="status" value="<%= receptionist.status %>" required>
                <input type="hidden" name="uid" value="<%= receptionist.user_id %>">
                <input type="submit" value="Update receptionist" >
            </form>
        </div>
    </section>
</main>
<%- include("adminFooter") %>