<%- include("./adminNav.ejs") %>
<main>
    <%- include("./adminSideBar.ejs") %>
<section class="form-win">
        <div id="addDoc" class="form-container">
    <h2>Receptionist Registration Form</h2>
    <form action="/admin/reception" method="POST">
        <label for="name">Name:</label>
        <input type="text" name="name" value="<%= typeof name !== 'undefined' ? name : '' %>" required>
        <span class="error"><%= errors?.name || '' %></span>

        <label for="email">Email:</label>
        <input type="text" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>" required>
        <span class="error"><%= errors?.email || '' %></span>

        <label for="contact">Contact:</label>
        <input type="text" name="contact" value="<%= typeof contact !== 'undefined' ? contact : '' %>" required>
        <span class="error"><%= errors?.contact || '' %></span>

        <label for="role">Role:</label>
        <input type="text" name="role" value="<%= typeof role !== 'undefined' ? role : 'Reception' %>" required>
        <span class="error"><%= errors?.role || '' %></span>

        <label for="status">Status:</label>
        <select name="status" required>
                 <option value="">Select status</option>
                <option value="Available" <%= doctor.status === 'Available' ? 'selected' : '' %>>Available</option>
                <option value="Unavailable" <%= doctor.status === 'Unavailable' ? 'selected' : '' %>>Unavailable</option>
                </select>
        <span class="error"><%= errors?.status || '' %></span>

        <input type="submit" value="Add Receptionist">
    </form>
</div>

    </section>
</main>
<%- include("adminFooter") %>