<%- include("./adminNav.ejs") %>
<main>
    <%- include("./adminSideBar.ejs") %>
<section class="form-win">
      <div id="addDoc">
            <form action="/updateDoctor" method="POST">
                <input type="hidden" name="id" value="<%= doctor.doctor_id %>">
                <label for="name">Name:</label>
                <input type="text"  name="name" value="<%= doctor.doctor_name%>"  required>
                <label for="email">Email:</label>
                <input type="text"  name="email" value="<%=doctor.doctor_email %>" required>
                <label for="contact">Contact:</label>
                <input type="text"  name="contact" value="<%=doctor.doctor_contact %>" required>
                <label for="role">Role:</label>
                <input type="text"  name="role" value="Doctor" required>
                <label for="speci">Specialization:</label>
                <input type="text"  name="speci" value="<%=doctor.doctor_specialization %>" required>
                <label for="exp">Experience:</label>
                <input type="text"  name="exp" value="<%= doctor.doctor_experience %>"   required>
                <label for="status">Status:</label>
                <input type="text"  name="status" value="<%= doctor.status %>" required>
                <input type="hidden" name="uid" value="<%= doctor.user_id %>">
                <input type="submit" value="Update Doctor" >
            </form>
        </div>
    </section>
</main>
<%- include("adminFooter") %>