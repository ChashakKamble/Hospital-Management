  <link rel="stylesheet" href="homeStyle.css">
  
  <style>
	  body {
            background-color: #f4f4f4;
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            scroll-behavior: smooth;
        }

        /* Navbar Styling */
        .navbar {
            background-color: black;
            padding: 15px 0;
            transition: all 0.3s ease-in-out;
        }

        .navbar-brand {
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 28px;
            color: #fff !important;
            text-transform: uppercase;
            display: flex;
            align-items: center;
        }

        .navbar-brand img {
            width: 50px;
            margin-right: 10px;
        }

        .nav-link {
            color: #fff !important;
            font-size: 16px;
            font-weight: 500;
            margin-right: 20px;
			margin-top:5px;
            transition: 0.3s;
            cursor: pointer;
            position: relative;
            padding: 5px 0;
        }
		
		 .btn-login {
      background-color: #28a745;
      color: white;
      border-radius: 20px;
      padding: 8px 16px;
    }
    .btn-login:hover {
      background-color: #218838;
    }

     .hero-section {
     
	  background: linear-gradient(to right, #6dd5fa, #ffffff);
      background-position: center;
      color: black;
      padding: 100px 0;
      text-align: center;
    }
    .hero-section h1 {
      font-size: 3rem;
      font-weight: bold;
      text-shadow: 1px 1px 4px rgba(0,0,0,0.6);
    }
    .section-title {
      text-align: center;
      margin: 40px 0 20px;
      font-weight: bold;
    }
    .card img {
      height: 200px;
      object-fit: cover;
    }
    footer {
      background-color: black;
      color: white;
      padding: 20px 0;
    }
	
	.shadow-box {
  background-color: white;
  padding: 40px;
  border-radius: 12px;
  margin: 50px auto;
  max-width: 900px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15); /* OUTER shadow */
}

//media Query

@media (max-width: 991.98px) {
  .navbar .navbar-nav {
    text-align: center;
  }
  .navbar .nav-link {
    margin-right: 0;
    padding: 10px;
    display: block;
  }
  .btn-login {
    margin-top: 10px;
    width: 100%;
  }
}

@media (max-width: 768px) {
  .hero-section h1 {
    font-size: 2rem;
  }

  .hero-section p.lead {
    font-size: 1rem;
  }

  .shadow-box {
    padding: 20px;
    margin: 20px auto;
  }

  .section-title {
    font-size: 1.5rem;
  }

  .card img {
    height: 180px;
  }
}

.footer-link {
  color: rgba(255, 255, 255, 0.8);
  text-decoration: none;
  display: block;
  margin-bottom: 8px;
  transition: color 0.3s;
}
.footer-link:hover {
  color: #00c9a7;
  text-decoration: underline;
}


@media (max-width: 576px) {
  .navbar-brand {
    font-size: 20px;
  }

  .card-body h5 {
    font-size: 1.1rem;
  }

  .card-body p {
    font-size: 0.95rem;
  }

  footer h5 {
    font-size: 1rem;
  }

  footer p, footer a {
    font-size: 0.9rem;
  }
}

  </style>
