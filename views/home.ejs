            margin-bottom: 30px;
            letter-spacing: 0.5px;
            text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.3);
        }

        .hero-content a {
            padding: 12px 30px;
            background-color: rgb(122, 255, 232);
            color: #004080;
            font-weight: 600;
            border-radius: 5px;
            text-transform: uppercase;
            text-decoration: none;
            transition: 0.3s;
            cursor: pointer;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
