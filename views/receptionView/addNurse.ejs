<%- include("./receptionNav.ejs") %>
<main>
    <%- include("./receptionSidebar.ejs") %>
<section class="form-win">
        <div id="addDoc" class="form-container">
    <h2>Nurse Registration Form</h2>
   <form action="/reception/nurse" method="POST">
   
    <label for="name">Nurse Name:</label>
    <input type="text" name="name" value="<%= typeof name !== 'undefined' ? name : '' %>" required>
    <span class="error"><%= errors?.name || '' %></span>

    <label for="contact">Nurse Contact:</label>
    <input type="text" name="contact" value="<%= typeof contact !== 'undefined' ? contact : '' %>" required>
    <span class="error"><%= errors?.contact || '' %></span>

    <label for="shift">Shift:</label>
    <select name="shift" required>
        <option value="">--Select Shift--</option>
        <option value="Day" <%= shift === 'Day' ? 'selected' : '' %>>Day</option>
        <option value="Night" <%= shift === 'Night' ? 'selected' : '' %>>Night</option>
    </select>
    <span class="error"><%= errors?.shift || '' %></span>

    <br>
    <input type="submit" value="Register Nurse">
</form>

</div>

    </section>
</main>
<%- include("receptionFooter") %>