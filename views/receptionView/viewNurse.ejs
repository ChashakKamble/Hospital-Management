<%- include("./receptionNav.ejs") %>
<main>
  <%- include("./receptionSidebar.ejs") %>
  <section class="form-win">
        <div id="viewDoc" >
            <h2>View Nurses</h2>
            <input type="text" id="search" placeholder="Search by name " onkeyup="searchRece(this)">
            <table>
                <thead>
                    <tr>
                        <th>Sr.No</th>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Shift</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% nurses.forEach(function(nurse,index) { %>
                    <tr>
                        <td><%= index+1%></td>
                        <td><%= nurse.nurse_name %></td> 
                        <td><%= nurse.nurse_contact %></td> 
                        <td><%= nurse.nurse_shift %></td>
                        <td>
                            <button class="update" onclick="window.location.href='/reception/getNurseDetails/<%= nurse.nurse_id %>'">Update</button>
                        </td>
                        <td>
                            <button  class="delete" value="<%= nurse.nurse_id %>" onclick="deleteNurse(this.value)">Delete</button>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>

        </div>

  </section>
</main>
<%- include("receptionFooter") %>
