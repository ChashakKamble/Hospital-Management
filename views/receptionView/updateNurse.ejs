<%- include("./receptionNav.ejs") %>
<main>
    <%- include("./receptionSidebar.ejs") %>
<section class="form-win">
        <div id="addDoc" class="form-container">
    <h2>Update Nurse Details</h2>
   <form  action="/reception/updateNurse" method="post">
  <!-- Hidden input to store nurse ID -->
  <input type="hidden" id="nurseId" name="id" value="<%= nurse?.nurse_id %>">

  <label for="nurseName">Nurse Name:</label>
  <input type="text" id="nurseName" name="name" value="<%= nurse?.nurse_name || '' %>" required>
  <span class="error"><%= errors?.name || '' %></span>

  <label for="nurseContact">Nurse Contact:</label>
  <input type="text" id="nurseContact" name="contact" value="<%= nurse?.nurse_contact || '' %>" required>
  <span class="error"><%= errors?.contact || '' %></span>

  <label for="nurseShift">Shift:</label>
  <select id="nurseShift" name="shift" required>
    <option value="">--Select Shift--</option>
    <option value="Day" <%= nurse?.nurse_shift === 'Day' ? 'selected' : '' %>>Day</option>
    <option value="Night" <%= nurse?.nurse_shift === 'Night' ? 'selected' : '' %>>Night</option>
  </select>
  <span class="error"><%= errors?.shift || '' %></span>

  <br>
  <input type="submit" value="Update Nurse">
</form>


</div>

    </section>
</main>
<%- include("receptionFooter") %>